<UserControl x:Class="DesktopUI.Views.EditProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopUI.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF44325F">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <materialDesign:Chip Content="Display Name" Visibility="{Binding IsLogIn, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" Margin="20" IconBackground="{DynamicResource PrimaryHueDarkBrush}" IsEnabled="False" BorderBrush="White" Foreground="White" FontSize="20" IconForeground="{DynamicResource PrimaryHueDarkForegroundBrush}">
                    <materialDesign:Chip.Icon>
                        <materialDesign:PackIcon Kind="Instagram"></materialDesign:PackIcon>
                    </materialDesign:Chip.Icon>
                </materialDesign:Chip>

                <!-- Display name -->
                <TextBox IsReadOnly="{Binding IsEditMode}" x:Name="Profile_DisplayName"  TextWrapping="Wrap" VerticalAlignment="Stretch" AcceptsReturn="True"
                     Visibility="{Binding IsDisplayNameVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" VerticalScrollBarVisibility="Auto" Width="300" HorizontalAlignment="Left" Background="White" FontSize="20" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"/>

                <materialDesign:Chip Content="Biography" Margin="20" IconBackground="{DynamicResource PrimaryHueDarkBrush}" IsEnabled="False" BorderBrush="White" Foreground="White" FontSize="20" IconForeground="{DynamicResource PrimaryHueDarkForegroundBrush}">
                    <materialDesign:Chip.Icon>
                        <materialDesign:PackIcon Kind="Instagram"></materialDesign:PackIcon>
                    </materialDesign:Chip.Icon>
                </materialDesign:Chip>

                <!-- Bio -->
                <TextBox IsReadOnly="{Binding IsEditMode}" x:Name="Profile_Bio" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" AcceptsReturn="True" TextWrapping="Wrap" 
                    Visibility="{Binding IsBioVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" VerticalScrollBarVisibility="Auto" Background="White" FontSize="20"/>

                <StackPanel Orientation="Horizontal" Visibility="{Binding IsLogIn, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                    <!-- Submit button -->
                    <Button x:Name="SubmitAsync" Content="Submit" BorderThickness="0" FontSize="18" Width="150" Margin="20 40" Height="40" Foreground="White" HorizontalAlignment="Left" Background="Green" />

                    <!-- Toggle edit mode button -->
                    <Button x:Name="ToggleEditMode" Content="Edit" BorderThickness="0" FontSize="18" Width="150" Height="40" Foreground="White" HorizontalAlignment="Left" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
