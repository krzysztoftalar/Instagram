                                        -->
        <!-- Follow User Button-->
        <!--<Button x:Name="Followa" BorderBrush="{Binding FollowBtnBorder}" Content="{Binding FollowBtnContent}" Width="120" Background="White" Foreground="Black" BorderThickness="2" Margin="10" FontFamily="Corbel" FontSize="20"/>-->
